<div>
  <div>
    <h1>
      List of all documents
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new document
    </h2>

    <form action="/insert_document" method="post">
      <div>
        <label for="original_body_box">
          Original body
        </label>

        <input type="text" id="original_body_box" name="query_original_body">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <button>
        Create document
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Original body
        </th>

        <th>
          User
        </th>

        <th>
          Title
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_documents.each do |a_document| %>
      <tr>
        <td>
          <%= a_document.id %>
        </td>

        <td>
          <%= a_document.original_body %>
        </td>

        <td>
          <%= a_document.user_id %>
        </td>

        <td>
          <%= a_document.title %>
        </td>

        <td>
          <%= time_ago_in_words(a_document.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_document.updated_at) %> ago
        </td>

        <td>
          <a href="/documents/<%= a_document.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
